{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "The schema URL for this configuration file."
    },
    "ai_gateway": {
      "type": "object",
      "properties": {
        "route_aliases": {
          "type": "object",
          "minProperties": 1,
          "propertyNames": {
            "type": "string",
            "minLength": 1
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "backend_id": {
                "type": "string",
                "minLength": 1
              },
              "model_id": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "backend_id",
              "model_id"
            ],
            "additionalProperties": false
          }
        },
        "reliability": {
          "type": "object",
          "properties": {
            "request_timeout_ms": {
              "type": "integer",
              "minimum": 1
            },
            "max_retries": {
              "type": "integer",
              "minimum": 0
            },
            "backoff_base_ms": {
              "type": "integer",
              "minimum": 1
            },
            "backoff_max_ms": {
              "type": "integer",
              "minimum": 1
            },
            "retry_policy": {
              "type": "string",
              "enum": [
                "before_first_event_only",
                "adapter_resumable"
              ]
            },
            "breaker_failure_threshold": {
              "type": "integer",
              "minimum": 1
            },
            "breaker_open_ms": {
              "type": "integer",
              "minimum": 1
            }
          },
          "additionalProperties": false
        },
        "budget": {
          "type": "object",
          "properties": {
            "max_request_time_ms": {
              "type": "integer",
              "minimum": 1
            },
            "max_usage_tokens_per_request": {
              "type": [
                "integer",
                "null"
              ],
              "minimum": 1
            },
            "max_concurrency_per_backend": {
              "type": "integer",
              "minimum": 1
            },
            "rate_smoothing_per_second": {
              "type": [
                "integer",
                "null"
              ],
              "minimum": 1
            }
          },
          "additionalProperties": false
        },
        "backends": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "dialect": {
                "type": "string",
                "enum": [
                  "openai_compatible",
                  "ollama",
                  "github_copilot_sdk"
                ]
              },
              "endpoint": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "credential": {
                "oneOf": [
                  {
                    "type": "object",
                    "properties": {
                      "type": {
                        "const": "env"
                      },
                      "var": {
                        "type": "string",
                        "minLength": 1
                      }
                    },
                    "required": [
                      "type",
                      "var"
                    ],
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "properties": {
                      "type": {
                        "const": "inline_token"
                      },
                      "token": {
                        "type": "string",
                        "minLength": 1
                      }
                    },
                    "required": [
                      "type",
                      "token"
                    ],
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "properties": {
                      "type": {
                        "const": "none"
                      }
                    },
                    "required": [
                      "type"
                    ],
                    "additionalProperties": false
                  }
                ]
              },
              "models": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": [
                    "id"
                  ],
                  "additionalProperties": false
                }
              },
              "capabilities": {
                "type": [
                  "object",
                  "null"
                ],
                "properties": {
                  "streaming": {
                    "type": "boolean"
                  },
                  "tool_calls": {
                    "type": "boolean"
                  },
                  "json_mode": {
                    "type": "boolean"
                  },
                  "json_schema_mode": {
                    "type": "boolean"
                  },
                  "vision": {
                    "type": "boolean"
                  },
                  "resumable_streaming": {
                    "type": "boolean"
                  }
                },
                "additionalProperties": false
              },
              "copilot": {
                "type": [
                  "object",
                  "null"
                ],
                "properties": {
                  "command": {
                    "type": "string",
                    "minLength": 1
                  },
                  "args": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "required": [
                  "command"
                ],
                "additionalProperties": false
              }
            },
            "required": [
              "id",
              "dialect",
              "credential",
              "models"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "backends",
        "route_aliases"
      ],
      "additionalProperties": false
    },
    "logging": {
      "type": "object",
      "properties": {
        "dir": {
          "type": "string",
          "minLength": 1
        },
        "filter": {
          "type": "string",
          "minLength": 1
        },
        "rotation": {
          "type": "string",
          "enum": [
            "daily",
            "hourly"
          ]
        },
        "retention_days": {
          "type": "integer",
          "minimum": 1
        },
        "stderr_warn_enabled": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "cortex": {
      "type": "object",
      "properties": {
        "inbox_capacity": {
          "type": "integer",
          "minimum": 1
        },
        "outbox_capacity": {
          "type": "integer",
          "minimum": 1
        },
        "default_limits": {
          "type": "object",
          "properties": {
            "max_attempts": {
              "type": "integer",
              "minimum": 1
            },
            "max_payload_bytes": {
              "type": "integer",
              "minimum": 1
            },
            "max_cycle_time_ms": {
              "type": "integer",
              "minimum": 1
            },
            "max_primary_calls": {
              "type": "integer",
              "const": 1
            },
            "max_sub_calls": {
              "type": "integer",
              "minimum": 1
            },
            "max_repair_attempts": {
              "type": "integer",
              "minimum": 0,
              "maximum": 1
            },
            "max_primary_output_tokens": {
              "type": "integer",
              "minimum": 1
            },
            "max_sub_output_tokens": {
              "type": "integer",
              "minimum": 1
            }
          },
          "additionalProperties": false
        },
        "helper_routes": {
          "type": "object",
          "properties": {
            "default": {
              "type": [
                "string",
                "null"
              ]
            },
            "primary": {
              "type": [
                "string",
                "null"
              ]
            },
            "sense_helper": {
              "type": [
                "string",
                "null"
              ]
            },
            "act_descriptor_helper": {
              "type": [
                "string",
                "null"
              ]
            },
            "acts_helper": {
              "type": [
                "string",
                "null"
              ]
            },
            "goal_tree_helper": {
              "type": [
                "string",
                "null"
              ]
            },
            "goal_tree_patch_helper": {
              "type": [
                "string",
                "null"
              ]
            },
            "l1_memory_patch_helper": {
              "type": [
                "string",
                "null"
              ]
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "continuity": {
      "type": "object",
      "properties": {
        "state_path": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    },
    "loop": {
      "type": "object",
      "properties": {
        "sense_queue_capacity": {
          "type": "integer",
          "minimum": 1
        },
        "tick_interval_ms": {
          "type": "integer",
          "minimum": 1
        },
        "tick_missed_behavior": {
          "type": "string",
          "enum": [
            "skip"
          ]
        }
      },
      "additionalProperties": false
    },
    "body": {
      "type": "object",
      "properties": {
        "std_shell": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "limits": {
              "type": "object",
              "properties": {
                "default_timeout_ms": {
                  "type": "integer",
                  "minimum": 1
                },
                "max_timeout_ms": {
                  "type": "integer",
                  "minimum": 1
                },
                "default_stdout_max_bytes": {
                  "type": "integer",
                  "minimum": 1
                },
                "max_stdout_max_bytes": {
                  "type": "integer",
                  "minimum": 1
                },
                "default_stderr_max_bytes": {
                  "type": "integer",
                  "minimum": 1
                },
                "max_stderr_max_bytes": {
                  "type": "integer",
                  "minimum": 1
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "std_web": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "limits": {
              "type": "object",
              "properties": {
                "default_timeout_ms": {
                  "type": "integer",
                  "minimum": 1
                },
                "max_timeout_ms": {
                  "type": "integer",
                  "minimum": 1
                },
                "default_response_max_bytes": {
                  "type": "integer",
                  "minimum": 1
                },
                "max_response_max_bytes": {
                  "type": "integer",
                  "minimum": 1
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "spine": {
      "type": "object",
      "properties": {
        "adapters": {
          "type": "array",
          "minItems": 1,
          "items": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "type": {
                    "const": "inline"
                  },
                  "config": {
                    "type": "object",
                    "properties": {
                      "act_queue_capacity": {
                        "type": "integer",
                        "minimum": 1
                      },
                      "sense_queue_capacity": {
                        "type": "integer",
                        "minimum": 1
                      }
                    },
                    "additionalProperties": false
                  }
                },
                "required": [
                  "type",
                  "config"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "const": "unix-socket-ndjson"
                  },
                  "config": {
                    "type": "object",
                    "properties": {
                      "socket_path": {
                        "type": "string",
                        "minLength": 1
                      }
                    },
                    "required": [
                      "socket_path"
                    ],
                    "additionalProperties": false
                  }
                },
                "required": [
                  "type",
                  "config"
                ],
                "additionalProperties": false
              }
            ]
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "ai_gateway"
  ],
  "additionalProperties": false
}
